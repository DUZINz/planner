@page
@model Planner.Web.Pages.IndexModel
@{
    ViewData["Title"] = "Planner Scheduler";
}

<div class="text-center">
    <h1 class="display-4">Planner Scheduler</h1>
    <p>Gerencie seus eventos e compromissos</p>
</div>

<div class="row mt-4">
    <div class="col-md-12">
        <h2>Pr√≥ximos Eventos</h2>
        <div id="calendar"></div>
        
        @if (Model.Events.Any())
        {
            <ul class="list-group mt-3">
                @foreach (var evt in Model.Events)
                {
                    <li class="list-group-item">
                        <h5>@evt.Title</h5>
                        <p>@evt.Description</p>
                        <small>@evt.StartDate.ToString("dd/MM/yyyy HH:mm") - @evt.EndDate.ToString("dd/MM/yyyy HH:mm")</small>
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="text-muted">Nenhum evento cadastrado.</p>
        }
    </div>
</div>