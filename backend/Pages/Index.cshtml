@page
@model Planner.Web.Pages.IndexModel
@{
    ViewData["Title"] = "Planner";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container">
        <h1>üìÖ Planner - Agenda</h1>
        
        <div class="events-list">
            @if (Model.Events != null && Model.Events.Any())
            {
                foreach (var evt in Model.Events)
                {
                    <div class="event-card">
                        <h3>@evt.Title</h3>
                        
                        @if (!string.IsNullOrEmpty(evt.Description))
                        {
                            <p>@evt.Description</p>
                        }
                        
                        <div class="event-dates">
                            <strong>üìÖ Data:</strong> @evt.StartDate
                            
                            @if (!string.IsNullOrEmpty(evt.StartTime))
                            {
                                <span>√†s @evt.StartTime</span>
                            }
                            
                            @if (!string.IsNullOrEmpty(evt.EndDate))
                            {
                                <span>at√© @evt.EndDate</span>
                                
                                @if (!string.IsNullOrEmpty(evt.EndTime))
                                {
                                    <span>√†s @evt.EndTime</span>
                                }
                            }
                        </div>
                        
                        @if (!string.IsNullOrEmpty(evt.Location))
                        {
                            <div class="event-location">
                                <strong>üìç Local:</strong> @evt.Location
                            </div>
                        }
                    </div>
                }
            }
            else
            {
                <p class="no-events">Nenhum evento cadastrado.</p>
            }
        </div>
        
        <div class="actions">
            <a href="/api/schedule" class="btn">Ver API JSON</a>
        </div>
    </div>
</body>
</html>